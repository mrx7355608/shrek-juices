<div class="mx-auto my-5 pt-3" style="max-width: 600px;">
  <h2 class="mt-2 font-weight-bold">Login to your account</h2>

  <form
    method="post"
    action="/auth/login"
    class="mt-5 w-100"
    style="max-width: 600px;"
  >

    {{#if messages.error}}
      <div class="alert alert-danger" role="alert">{{messages.error}}</div>
    {{/if}}

    <div class="form-group input-group-lg">
      <label for="exampleInputEmail1">Email address</label>
      <input
        name="email"
        type="email"
        class="form-control"
        aria-describedby="emailHelp"
        placeholder="Enter email"
      />
    </div>

    <div class="form-group input-group-lg mt-4">
      <label for="exampleInputPassword1">Password</label>
      <input
        name="password"
        type="password"
        class="form-control"
        id="exampleInputPassword1"
        placeholder="Password"
      />
    </div>

    <p class="underline text-muted font-weight-bold text-right">Forgot Password?</p>

    <button
      type="submit"
      class="btn btn-outline-dark mt-3 w-100 shadow-none rounded font-weight-bold"
    >Login</button>

  </form>
  <p class="text-center mt-4 mb-5 pb-3">
    Don't have an account?
    <a href="/auth/signup" class="font-weight-bold text-dark">Signup</a>
  </p>
</div>