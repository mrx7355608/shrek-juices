      <!-- Card deck -->
      <div class="card-deck justify-content-center" style="flex-wrap: wrap;">
      {{#each juices}}
        <!-- Card -->
        <div class="card mb-4" style="min-width: 410px; max-width: 410px;">
          <!--Card image-->
          <div class="view overlay">
            <img class="card-img-top" src="{{imageURL}}">
          </div>
          <!--Card content-->
          <div class="card-body">
            <!--Title-->
            <h4 class="card-title">{{name}}</h4>
            <!--Text-->
            <p class="card-text">{{description}}</p>
            <h4 class="blink">Price: Pkr.{{price}}</h4>
            <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
            <center>
                <a href="/order/{{_id}}">
                    <button type="button" class="btn aqua-gradient btn-md">ORDER NOW</button>
                </a>
            </center>
          </div>
        </div>
        {{/each}}
        </div>
  </center>

